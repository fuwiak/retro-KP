# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_API_BASE=https://api.groq.com/openai/v1
GROQ_EMAIL_MODEL=llama-3.1-8b-instant
GROQ_PROPOSAL_MODEL=llama-3.1-8b-instant

# Server Configuration (optional)
HOST=0.0.0.0
PORT=3000

# Environment
ENVIRONMENT=development

# IMAP Configuration
IMAP_SERVER=imap.example.com
IMAP_PORT=993
IMAP_USERNAME=your_inbox@example.com
IMAP_PASSWORD=super_secret_password
IMAP_FOLDER=INBOX

# amoCRM Configuration
AMO_BASE_URL=https://yourcompany.amocrm.ru
AMO_CLIENT_ID=your_client_id
AMO_CLIENT_SECRET=your_client_secret
AMO_REDIRECT_URI=https://yourapp.example.com/oauth/callback
AMO_ACCESS_TOKEN=initial_access_token
AMO_REFRESH_TOKEN=initial_refresh_token
AMO_PIPELINE_ID=000000
AMO_LEAD_STATUS_ID=00000000
AMO_RESPONSIBLE_USER_ID=0000000
AMO_TOKEN_FILE=amo_tokens.json

# 1C Integration
ONEC_BASE_URL=https://onec.example.com/api
ONEC_API_KEY=super_secret_token
ONEC_AUTH_HEADER=Basic base64token
ONEC_TIMEOUT_SECONDS=15
ONEC_INVOICE_ENDPOINT=/PostDataInvoice
ONEC_INVOICE_PDF_ENDPOINT=/PostDataInvoice?format=pdf
ONEC_REALIZATION_ENDPOINT=/PostDataRealization
ONEC_REALIZATION_PDF_ENDPOINT=/PostDataRealization?format=pdf
ONEC_FULFILLMENT_ENDPOINT=/documents/fulfillment

